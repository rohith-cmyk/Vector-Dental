# Specialist Portal - copy to .env.local and fill in values
# These are baked in at build time (NEXT_PUBLIC_*)

# ============ Backend API (Required) ============
# Base URL of the backend API (no trailing slash)
# Local: http://localhost:4000
# Production: https://api.yourdomain.com
NEXT_PUBLIC_API_URL=http://localhost:4000

# ============ Supabase (Required) ============
# From Supabase Dashboard > Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ============ Optional ============
# GD Portal URL - for routing General Dentists to signup
NEXT_PUBLIC_GD_PORTAL_URL=http://localhost:3001

# Use mock data instead of API (dev only)
NEXT_PUBLIC_USE_MOCK_DATA=false
