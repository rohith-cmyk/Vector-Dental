// Prisma Schema for Dental Referral Management System

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Clinic Model
model Clinic {
  id        String   @id @default(uuid())
  name      String
  address   String?
  phone     String?
  email     String?
  logoUrl   String?
  logoStorageKey String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users          User[]
  contacts       Contact[]
  referrals      Referral[]
  referralLink   ClinicReferralLink?
  notifications  Notification[]
  specialistProfiles SpecialistProfile[]

  @@map("clinics")
}

// User Model
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(STAFF)
  clinicId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  clinic         Clinic          @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  referralLinks  ReferralLink[]
  intendedReferrals Referral[] @relation("IntendedRecipient")
  specialistProfile SpecialistProfile?

  @@index([clinicId])
  @@map("users")
}

enum UserRole {
  ADMIN
  GENERAL_DENTIST
  STAFF
}

// Specialist Profile (Directory data)
model SpecialistProfile {
  id               String   @id @default(uuid())
  userId           String   @unique @map("user_id")
  clinicId         String   @map("clinic_id")
  firstName        String?  @map("first_name")
  lastName         String?  @map("last_name")
  credentials      String?
  specialty        String?
  subSpecialties   String[] @default([]) @map("sub_specialties")
  yearsInPractice  Int?     @map("years_in_practice")
  boardCertified   Boolean  @default(false) @map("board_certified")
  languages        String[] @default([])
  insuranceAccepted String[] @default([]) @map("insurance_accepted")
  phone            String?
  email            String?
  website          String?
  photoUrl         String?  @map("photo_url")
  photoStorageKey  String?  @map("photo_storage_key")
  address          String?
  city             String?
  state            String?
  zip              String?
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  clinic Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@index([clinicId])
  @@map("specialist_profiles")
}

// Contact Model (Referral Recipients/Specialists)
model Contact {
  id        String        @id @default(uuid())
  clinicId  String
  name      String
  specialty String
  phone     String
  email     String
  address   String?
  notes     String?
  status    ContactStatus @default(ACTIVE)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  // Relations
  clinic    Clinic     @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  referrals Referral[]

  @@index([clinicId])
  @@index([specialty])
  @@index([status])
  @@map("contacts")
}

enum ContactStatus {
  ACTIVE
  INACTIVE
}

// Referral Model (Two-Way System)
model Referral {
  id           String           @id @default(uuid())
  
  // Referral Direction
  referralType ReferralType     @default(OUTGOING)
  
  // For OUTGOING referrals (you send out)
  fromClinicId String           // Clinic sending the referral
  toContactId  String?          // Contact from your directory (optional)
  toClinicId   String?          // If referring to another clinic in the system
  
  // For INCOMING referrals (you receive)
  // The clinic receiving uses fromClinicId
  fromClinicName    String?     // Name of external referring clinic
  fromClinicEmail   String?     // Email of referring clinic  
  fromClinicPhone   String?     // Phone of referring clinic
  referringDentist  String?     // Name of dentist who made referral
  
  // Patient Information
  patientName  String
  patientDob   DateTime
  patientPhone String?
  patientEmail String?
  
  // New fields for magic link flow (optional for backward compatibility)
  patientFirstName      String?  // Split from patientName for new flow
  patientLastName       String?  // Split from patientName for new flow
  insurance             String?  // Insurance information
  gpClinicName          String?  // GP clinic name (maps to fromClinicName)
  submittedByName       String?  // Name of person submitting (maps to referringDentist)
  submittedByPhone      String?  // Phone of person submitting
  
  // Referral Details
  reason       String
  urgency      ReferralUrgency  @default(ROUTINE)
  status       ReferralStatus   @default(DRAFT)
  notes        String?
  acceptedAt   DateTime?
  scheduledAt  DateTime?
  completedAt  DateTime?
  postOpScheduledAt DateTime?
  
  intendedRecipientId String? // FK to User (Specialist)
  specialty    String?          // Specialty category (e.g. Orthodontist)
  referralLinkId String?  // FK to ReferralLink
  shareToken   String?   @unique // Token for sharing referral (view-only access)
  statusToken  String?   @unique // Token for status tracking page
  statusAccessCodeHash String? // Hashed access code for status tracking
  
  // Clinical Data
  selectedTeeth String[]  @default([]) // Array of tooth IDs (e.g. ["1", "3", "32"])
  
  // Timestamps
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  // Relations
  clinic        Clinic          @relation(fields: [fromClinicId], references: [id], onDelete: Cascade)
  contact       Contact?        @relation(fields: [toContactId], references: [id], onDelete: Restrict)
  intendedRecipient User?       @relation("IntendedRecipient", fields: [intendedRecipientId], references: [id])
  referralLink  ReferralLink?   @relation(fields: [referralLinkId], references: [id], onDelete: SetNull)
  files         ReferralFile[]
  notifications Notification[]

  @@index([fromClinicId])
  @@index([toContactId])
  @@index([toClinicId])
  @@index([intendedRecipientId])
  @@index([referralType])
  @@index([status])
  @@index([createdAt])
  @@index([referralLinkId])
  @@index([shareToken])
  @@index([statusToken])
  @@map("referrals")
}

enum ReferralType {
  OUTGOING
  INCOMING
}

enum ReferralStatus {
  DRAFT
  SENT
  SUBMITTED        // New: from magic link
  PENDING_REVIEW   // New
  ACCEPTED
  REJECTED         // New
  COMPLETED
  CANCELLED
}

enum ReferralUrgency {
  ROUTINE
  URGENT
  EMERGENCY
}

// Referral File Model
model ReferralFile {
  id         String   @id @default(uuid())
  referralId String
  fileName   String
  fileType   String
  fileUrl    String
  fileSize   Int
  storageKey String?  // Where file lives (S3 key, Supabase path, etc.)
  mimeType   String?  // More accurate MIME type
  uploadedAt DateTime @default(now())

  // Relations
  referral Referral @relation(fields: [referralId], references: [id], onDelete: Cascade)

  @@index([referralId])
  @@map("referral_files")
}

// Clinic Referral Link Model (Shareable Public Link)
model ClinicReferralLink {
  id          String   @id @default(uuid())
  clinicId    String   @unique
  slug        String   @unique  // URL-friendly slug (e.g., "smith-dental-clinic")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  clinic Clinic @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@map("clinic_referral_links")
}

// Magic Referral Link Model (Token-based with access code)
model ReferralLink {
  id             String   @id @default(uuid())
  specialistId   String   // FK to User.id (the specialist creating the link)
  token          String   @unique // Random 32-64 char token (unguessable)
  accessCodeHash String   // Hashed access code (bcrypt)
  isActive       Boolean  @default(true)
  label          String?  // Optional label like "Standing GP Link"
  specialty      String?  // Specialist type (e.g., Endodontist)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  specialist User       @relation(fields: [specialistId], references: [id], onDelete: Cascade)
  referrals  Referral[]

  @@index([specialistId])
  @@index([token])
  @@map("referral_links")
}

// Notification Model
model Notification {
  id          String             @id @default(uuid())
  clinicId    String
  userId      String?            // Specific user, or null for all clinic users
  type        NotificationType
  referralId  String?
  title       String
  message     String
  isRead      Boolean            @default(false)
  createdAt   DateTime           @default(now())

  // Relations
  clinic   Clinic    @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  referral Referral? @relation(fields: [referralId], references: [id], onDelete: Cascade)

  @@index([clinicId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

enum NotificationType {
  NEW_INCOMING_REFERRAL
  REFERRAL_ACCEPTED
  REFERRAL_REJECTED
  REFERRAL_COMPLETED
  REFERRAL_STATUS_UPDATE
  SYSTEM_MESSAGE
}

